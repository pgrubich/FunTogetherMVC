@model FunTogether.Models.ActivityViewModel

<h3 class="mb-3">@Html.DisplayFor(model => model.Title)</h3>
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            @Html.DisplayFor(model => model.Description)
        </div>
        <div class="mb-3">
            @Html.DisplayFor(model => model.Date)
        </div>
        <div class="mb-3">
            @Html.DisplayFor(model => model.Type)
        </div>
        @foreach (var ageGroup in Model.AgeGroups)
        {
            <div class="mb-3">
                @Html.DisplayFor(model => ageGroup.Value)
            </div>
        }
        @foreach (var gender in Model.Genders)
        {
            <div class="mb-3">
                @Html.DisplayFor(model => gender.Value)
            </div>
        }

        <div id="map" class="mb-3"></div>
        <div class="mb-3" id="infowindow-content">
            <span id="place-name" class="title"></span><br />
            <span id="place-address"></span>
        </div>

        <div class="form-group mb-3">
            <input asp-for="LocationLatitude" class="form-control" type="number" step="any" style="display:none" value="@Model.LocationLatitude" />
        </div>
        <div class="form-group mb-3">
            <input asp-for="LocationLongitude" class="form-control" type="number" step="any" style="display:none" value="@Model.LocationLongitude" />
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script defer
            src="https://maps.googleapis.com/maps/api/js?libraries=&callback=initMap">
    </script>
    <script src="~/js/activity/details.js" type="text/javascript"></script>
}
