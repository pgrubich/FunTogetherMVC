@model ActivitySearchFilterModel
<div>
    <h5>Filters</h5>
    <form asp-action="FilterActivities" asp-controller="Activity" method="post">
        <div id="categories">
            <div class="mb-3">
                <label asp-for="City" class="mb-1"></label>
                <input asp-for="City" class="form-control" type="text" />
            </div>
            <label asp-for="Categories" class="mb-1"></label>
            @{
                for (int i = 0; i < Model.Categories.Length; i++)
                {
                    <div>
                        <input type="checkbox" value="@Model.Categories[i]" />
                        <label class="small">@Model.Categories[i]</label>
                    </div>
                }
            }
        </div>
        <div class="form-group">
            <input type="submit" id="filterSubmit" value="Filter" class="btn btn-primary mt-2" />
        </div>
    </form>
</div>
