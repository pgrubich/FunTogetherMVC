@model FunTogether.Filters.PaginatedList<FunTogether.Models.ActivityIndexViewModel>

<div id="carousel" class="carousel slide mb-3" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/pexels-pavel-danilyuk-6925357-cropped.jpg" class="d-block w-100" alt="">
            <div class="carousel-caption d-none d-md-block">
                <h2>Meet people who share your passions</h2>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/pexels-maksim-goncharenok-4348630-cropped.jpg" class="d-block w-100" alt="">
            <div class="carousel-caption d-none d-md-block">
                <h2>Make new friends while doing things you enjoy</h2>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/pexels-cottonbro-4691567-cropped.jpg" class="d-block w-100" alt="">
            <div class="carousel-caption d-none d-md-block">
                <h2>Find people to do your favourite activities with</h2>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="row">
    <div class="col-md-4 col-lg-3 mb-sm-4 mb-4">
        <partial name="_ActivityFilters" model="new ActivitySearchFilterModel
        { Categories = (FunTogether.Data.ActivityType[])Enum.GetValues(typeof(FunTogether.Data.ActivityType)) }" />
    </div>
    <div id="activities" class="col-md-8 col-lg-9 row row-cols-lg-2 row-cols-xl-3 gx-lg-3">
        <partial name="_ActivityList" />
    </div>
</div>

@section Scripts {
    <script src="~/js/activity/index.js" type="text/javascript"></script>
}

@section Head {
    <link rel="stylesheet" type="text/css" href="~/css/activity/index.css" />
    <script defer src="~/js/fontawesome/all.js"></script>
}